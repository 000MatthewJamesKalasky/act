#!/bin/sh

BASE=`$VLSI_TOOLS_SRC/scripts/getbaseos`

FILE=ext

if [ x$BASE = "xdarwin" ]
then
#
# For MacOS
#
	gcc -fPIC -c -I${ACT_HOME}/include ${FILE}.c
	gcc -dynamiclib -L${ACT_HOME}/lib -o ext.lib ${FILE}.o -lvlsilib_sh
else 
#
# For Linux
#
	gcc -shared -DPIC -fPIC -I${ACT_HOME}/include -c ${FILE}.c
	gcc -shared -Wl,-x -L${ACT_HOME}/lib -o ext.lib ${FILE}.o -lvlsilib_sh
fi

rm ${FILE}.o
